{
	"compilerOptions": {
		"composite": true,
		"target": "ESNext",
		"module": "NodeNext",
		"paths": {
			"server/*": ["./server/*"],
			"util/*": ["./util/*"],
			"src/*": ["./src/*"],
			"client/*": ["./src/client/*"]
		},
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"noEmit": true
	},
	"include": ["src", "./*.ts", "util/", "server/", "esTypes.d.ts"],
	"references": []
}
